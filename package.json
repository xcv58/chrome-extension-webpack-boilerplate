{
  "name": "chrome-extension-webpack",
  "version": "0.0.1",
  "description": "A boilerplate to chrome extension with webpack",
  "scripts": {
    "analyze": "NODE_ENV=production node utils/analyze.js",
    "build": "node utils/build.js",
    "deploy": "NODE_ENV=production yarn build && zip -r build.zip build/*",
    "lint": "standard",
    "lintfix": "yarn lint -- --fix",
    "start": "node utils/webserver.js",
    "test": "yarn lint && yarn build"
  },
  "dependencies": {
    "chrome-extension-async": "^3.2.4",
    "mobx": "^3.2.2",
    "mobx-react": "^4.2.2",
    "mousetrap": "^1.6.1",
    "react": "^15.6.1",
    "react-custom-scrollbars": "^4.1.2",
    "react-dom": "^15.6.1",
    "style-loader": "^0.18.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "8.0.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.7",
    "file-loader": "^0.11.2",
    "fs-extra": "^4.0.1",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "standard": "^10.0.3",
    "webpack": "^3.5.5",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.7.1",
    "write-file-webpack-plugin": "^4.1.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "chrome"
    ]
  }
}
